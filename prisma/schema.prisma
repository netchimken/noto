generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider          = "zod-prisma-types"
  output            = "../node_modules/@prisma/client/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id          Int       @id @default(autoincrement())
  content     String

  createdAt   DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt   DateTime? @db.Timestamptz(3)

  author      Author    @relation(fields: [authorId, authorName], references: [id, name])
  authorId    Int
  authorName  String
}

model Author {
  id        Int       @id @default(autoincrement())
  name      String    @unique

  notes     Note[]
  pinned    Int?

  admin     Boolean?
  joinedAt  DateTime  @default(now()) @db.Timestamptz(3)
  loginAt   DateTime? @db.Timestamptz(3)
  email     String?   @unique
  secret    String    @unique

  @@unique([id, name])
}